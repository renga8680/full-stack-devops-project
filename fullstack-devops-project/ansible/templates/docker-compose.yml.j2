version: '3.8'

services:
  backend:
    image: {{ backend_image }}:{{ image_tag }}
    container_name: backend
    restart: unless-stopped
    ports:
      - "5000:5000"
    environment:
      - NODE_ENV=production
      - PORT=5000
    networks:
      - app-network

  frontend:
    image: {{ frontend_image }}:{{ image_tag }}
    container_name: frontend
    restart: unless-stopped
    ports:
      - "80:80"
    depends_on:
      - backend
    networks:
      - app-network

networks:
  app-network:
    driver: bridge
