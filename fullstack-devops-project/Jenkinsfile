pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                echo 'üì• Pulling code from GitHub...'
                checkout scm
            }
        }

        stage('Verify Tools') {
            steps {
                echo 'üîç Checking tools...'
                sh 'docker --version'
                sh 'docker-compose --version'
            }
        }

        stage('Build Images') {
            steps {
                echo 'üî® Building Docker images...'
                dir('fullstack-devops-project') {
                    sh 'docker-compose build'
                }
            }
        }

        stage('Stop Old Containers') {
            steps {
                echo 'üõë Stopping old containers...'
                dir('fullstack-devops-project') {
                    sh 'docker-compose down || true'
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'üöÄ Starting application...'
                dir('fullstack-devops-project') {
                    sh 'docker-compose up -d'
                }
            }
        }

        stage('Verify Backend Health') {
            steps {
                echo '‚è≥ Waiting for backend to become healthy...'
                sh '''
                for i in {1..12}; do
                    if curl -f http://localhost:5000/api/health; then
                        echo "‚úÖ Backend is up and healthy!"
                        exit 0
                    fi
                    echo "‚åõ Waiting for backend..."
                    sleep 5
                done

                echo "‚ùå Backend failed to start in time"
                exit 1
                '''
            }
        }
    }

    post {
        failure {
            echo '‚ùå Deployment failed!'
            dir('fullstack-devops-project') {
                sh 'docker-compose logs || true'
            }
        }
        always {
            sh 'docker system prune -f || true'
        }
    }
}
