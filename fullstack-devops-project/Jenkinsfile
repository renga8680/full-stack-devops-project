pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                echo 'üì• Pulling code from GitHub...'
                checkout scm
            }
        }
        stage('Verify Tools') {
            steps {
                echo 'üîç Checking Docker tools...'
                sh 'docker --version'
                sh 'docker-compose --version'
            }
        }
        stage('Build Images') {
            steps {
                echo 'üî® Building Docker images...'
                dir('fullstack-devops-project') {
                    sh 'docker-compose build'
                }
            }
        }
        stage('Stop Old Containers') {
            steps {
                echo 'üõë Stopping old containers...'
                dir('fullstack-devops-project') {
                    sh 'docker-compose down || true'
                }
            }
        }
        stage('Deploy Application') {
            steps {
                echo 'üöÄ Starting containers...'
                dir('fullstack-devops-project') {
                    sh 'docker-compose up -d'
                }
            }
        }
        stage('Verify Deployment') {
            steps {
                echo '‚è≥ Waiting for services to start...'
                sh 'sleep 20'
                echo '‚úÖ Checking containers...'
                sh 'docker ps'
                echo '‚úÖ Testing backend health...'
                sh '''
                    for i in {1..10}; do
                        if curl -f http://localhost:5000/api/health; then
                            echo "‚úÖ Backend is healthy!"
                            exit 0
                        fi
                        echo "‚åõ Attempt $i/10..."
                        sleep 5
                    done
                    echo "‚ö†Ô∏è  Backend health check timeout (but containers may still be starting)"
                    exit 0
                '''
            }
        }
    }
    post {
        success {
            echo '''
            ‚úÖ DEPLOYMENT SUCCESSFUL!
            ================================
            Frontend : http://20.211.96.17
            Backend  : http://20.211.96.17:5000/api/health
            Jenkins  : http://20.211.96.17:8080
            ================================
            '''
        }
        failure {
            echo '‚ùå Deployment failed!'
            dir('fullstack-devops-project') {
                sh 'docker-compose logs || true'
            }
        }
        always {
            echo 'üßπ Cleaning unused Docker resources...'
            sh 'docker system prune -f || true'
        }
    }
}
