pipeline {
    agent any
    
    stages {
        stage('Checkout Code') {
            steps {
                echo 'üì• Checking out source code...'
                checkout scm
            }
        }
        
        stage('Build Backend') {
            steps {
                dir('fullstack-devops-project/backend') {
                    sh 'echo "Backend ready"'
                }
            }
        }
        
        stage('Build Frontend') {
            steps {
                dir('fullstack-devops-project/frontend') {
                    sh 'echo "Frontend ready"'
                }
            }
        }
        
        stage('Build Docker Images') {
            steps {
                dir('fullstack-devops-project') {
                    sh 'docker-compose build'
                }
            }
        }
        
        stage('Deploy Application') {
            steps {
                dir('fullstack-devops-project') {
                    sh 'docker-compose up -d'
                }
            }
        }
        
        stage('Verify Deployment') {
            steps {
                sh 'sleep 10'
                sh 'curl -f http://20.92.232.25:5000/api/health || exit 1'
            }
        }
    }
    
    post {
        success {
            echo '‚úÖ Pipeline completed successfully!'
        }
        failure {
            echo '‚ùå Pipeline failed!'
        }
    }
}
