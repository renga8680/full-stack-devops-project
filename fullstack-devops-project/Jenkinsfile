pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                echo 'ğŸ“¥ Pulling code from GitHub...'
                checkout scm
            }
        }

        stage('Verify Tools') {
            steps {
                echo 'ğŸ” Checking Docker tools...'
                sh 'docker --version'
                sh 'docker-compose --version'
            }
        }

        stage('Build Images') {
            steps {
                echo 'ğŸ”¨ Building Docker images...'
                dir('fullstack-devops-project') {
                    sh 'docker-compose build'
                }
            }
        }

        stage('Stop Old Containers') {
            steps {
                echo 'ğŸ›‘ Stopping old containers...'
                dir('fullstack-devops-project') {
                    sh 'docker-compose down || true'
                }
            }
        }

        stage('Deploy Application') {
            steps {
                echo 'ğŸš€ Starting containers...'
                dir('fullstack-devops-project') {
                    sh 'docker-compose up -d'
                }
            }
        }

        stage('Verify Backend Health') {
            steps {
                echo 'â³ Checking backend health inside container...'
                dir('fullstack-devops-project') {
                    sh '''
                    for i in {1..12}; do
                        if docker-compose exec -T backend wget --quiet --spider http://localhost:5000/api/health; then
                            echo "âœ… Backend is healthy!"
                            exit 0
                        fi
                        echo "âŒ› Waiting for backend..."
                        sleep 5
                    done

                    echo "âŒ Backend failed to start in time"
                    exit 1
                    '''
                }
            }
        }
    }

    post {
        success {
            echo 'ğŸ‰ Deployment Successful!'
        }
        failure {
            echo 'âŒ Deployment failed!'
            dir('fullstack-devops-project') {
                sh 'docker-compose logs || true'
            }
        }
        always {
            echo 'ğŸ§¹ Cleaning unused Docker resources...'
            sh 'docker system prune -f || true'
        }
    }
}
